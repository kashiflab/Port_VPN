<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:gravity="center"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="0.2"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    app:srcCompat="@drawable/logo_my" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6">
            <TextView
                android:id="@+id/tvProfileName"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Hello World"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#009933"
                tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvProfileName2"
                    android:fontFamily="@font/montserrat"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProfileName"
                    android:gravity="top"
                    android:text="Hello World"
                    android:textColor="#221f3b"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.2"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvPremium"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/premium_bg"
                    android:foregroundGravity="right"
                    android:gravity="clip_horizontal|center"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:text="Premium"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvVip"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vip_bg"
                    android:foregroundGravity="right"
                    android:gravity="clip_horizontal|center"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:text="VIP"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvFree"
                    android:background="@drawable/free_bg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="right"
                    android:gravity="clip_horizontal|center"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:text="Free"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
