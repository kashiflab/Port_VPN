<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login2bg"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/logincardview"
        android:background="#ebebeb"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#ebebeb"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#006666"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Create your free account" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/fullname"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:fontFamily="@font/montserrat"
                android:textColorHint="#050505"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_action_person"
                android:inputType="text"
                app:met_floatingLabel="normal" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/username"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:fontFamily="@font/montserrat"
                android:textColorHint="#050505"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_action_person"
                android:inputType="text"
                app:met_floatingLabel="normal" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/email"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:fontFamily="@font/montserrat"
                android:textColorHint="#050505"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_email_w_24dp"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="normal" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/montserrat"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="#050505"
                android:drawableStart="@drawable/ic_action_password"
                android:inputType="textPassword"
                app:met_floatingLabel="normal" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/conpassword"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/montserrat"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColorHint="#050505"
                android:drawableStart="@drawable/ic_action_password"
                android:inputType="textPassword"
                app:met_floatingLabel="normal" />

            <Button
                android:id="@+id/signup"
                android:text="Register"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:backgroundTint="#006666"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="end"
                android:fontFamily="@font/montserrat"
                android:textColor="#009933"
                android:id="@+id/signuptv"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Already have an account? Sign In"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:layout_below="@id/logincardview"
        android:id="@+id/guest_login"
        android:text="Continue As Guest"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#006666"
        android:backgroundTint="#ebebeb"
        android:fontFamily="@font/montserrat_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>